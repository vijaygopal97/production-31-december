# Frontend Environment Variables Sample
# Copy this file to .env and update the values

# API Configuration
VITE_API_BASE_URL=http://localhost:5000

# SEO Control - Set to 'true' to enable search engine indexing, 'false' to disable
VITE_ENABLE_SEO_INDEXING=false

# Application Configuration
VITE_APP_NAME=Opine India
VITE_APP_VERSION=1.0.0

# Analytics (Optional - for future use)
# VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# VITE_FACEBOOK_PIXEL_ID=FB_PIXEL_ID

# Social Media Configuration (Optional)
# VITE_TWITTER_HANDLE=@OpineIndia
# VITE_FACEBOOK_PAGE=https://facebook.com/opineindia

# Feature Flags (Optional - for future use)
# VITE_ENABLE_ANALYTICS=false
# VITE_ENABLE_CHAT_SUPPORT=false
# VITE_ENABLE_DARK_MODE=false
